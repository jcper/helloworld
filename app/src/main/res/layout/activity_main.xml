<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:id="@+id/linear">



    <TextView
        android:id="@+id/texto"
        android:text="@string/hello"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/edittext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingresar dato"/>


    <Button
        android:id="@+id/boton"
        android:text="@string/boton"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/botonN"
        android:text="@string/boton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/imagen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/crystal"/>



    <Button
        android:id="@+id/botonL"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lanzar"/>

    <Button
        android:id="@+id/botonNueva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/actividad"/>
    <EditText
        android:id="@+id/enviar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="enviar dato"/>

    <TextView
        android:id="@+id/texto1"
        android:text="proximidad"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <ListView
        android:id="@+id/lista"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </ListView>


</LinearLayout>